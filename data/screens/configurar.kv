TrazabilidadScreen:
	name: 'Configurar'
	focused: ti_default
    on_parent:
        if not args[1] and self.focused: self.focused.focus = False
        if args[1]: ti_default.focus = True


	FloatLayout:
		padding: 20
    	spacing: 10

		Label:
			size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .9}
			text: 'Servidor'

	    TextInput:
	        id: ti_default
	        size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .8}
	        multiline: False
	        text: root.url
	        focus: True
    		on_text: app.change_url(self.text)
	        
	FloatLayout:
		padding: 20
    	spacing: 10

		Label:
			size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .7}
			text: 'Base de datos'	  

		TextInput:
	        size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .6}
	        multiline: False
	        text: root.db
	        on_text: app.change_bd(self.text)

	FloatLayout:
		padding: 20
    	spacing: 10

		Label:
			size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .5}
			text: 'Usuario'

		TextInput:
	        size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .4}
	        multiline: False
	        text: root.user
	        on_text: app.change_user(self.text)

	FloatLayout:
		padding: 20
    	spacing: 10

		Label:
			size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .3}
			text: 'Contrase√±a'

	    TextInput:
	        size_hint: .8, .1
			pos_hint: {'x': .1, 'y': .2}
	        text: root.pwd
	        multiline: False
	        password: True
	        on_text: app.change_pwd(self.text)

	